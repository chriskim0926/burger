<div id= "newRows" class = "container">
<div class="row">
    <div class = "col-sm-3"></div>
        <div class = "col-sm-3">
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
    {{else}}
  	<li>
       <p>Burgers to Eat: {{this.burger_name}} 
          <form action="/{{this.id}}?_method=PUT" method="POST">
		            <input type="hidden" name="devoured" value="true">
		            <button type="submit" class="btn btn-outline-warning">Devour it!</button>
		          </form>
  	</li>
    {{/if}}
  {{/each}}
</ul>
</div>
    <div class = "col-sm-3">
<ul class = "devoured">
  {{#each burgers}}
  {{#if this.devoured}}
  	<li>
       <p>Devoured: {{this.burger_name}} </p>
  	</li>
      {{/if}}
  {{/each}}
</ul>
</div>
<div  class = "col-sm-3"></div>
</div>
</div>

